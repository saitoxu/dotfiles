public class Main {
    public static void main(String[] args) {
        Bank bank = new Bank("A Bad Bank", 1000);
        new ClientThread(bank).start();
        new ClientThread(bank).start();
    }
}

class ClientThread extends Thread {
    private Bank bank;
    public ClientThread(Bank bank) {
        this.bank = bank;
    }
    public void run() {
        while (true) {
            boolean ok = bank.withdraw(1000);
            if (ok) {
                bank.deposit(1000);
            }
        }
    }
}

class Bank {
    private int money;
    private String name;
    public Bank(String name, int money) {
        this.name = name;
        this.money = money;
    }
    public void deposit(int m) {
        money += m;
    }
    public boolean withdraw(int m) {
        if (money  >= m) {
            money -= m;
            check();
            return true;
        } else {
            return false;
        }
    }
    private void check() {
        if (money < 0) {
            System.out.println("預金残高がマイナスです！ money = " + money);
        }
    }
}
