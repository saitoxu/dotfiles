package adauction.simulator;

import java.util.ArrayList;

public class Struct {
    private double budget;
    private double cpa;
    private ArrayList<Double> icvr;

    public Struct(double _budget, double _cpa, ArrayList<Double> _icvr) {
	budget = _budget;
	cpa = _cpa;
	icvr = _icvr;
    }

    public double getBudget() {
	return budget;
    }

    public double getCpa() {
	return cpa;
    }

    // 価格が与えられたとき，各広告枠でどれくらいインプレッションが欲しいかを計算
    public ArrayList<Integer> getDemandOnPrice(int quota, int[] previousImps,
					       ArrayList<Double> prices) {
	ArrayList<Integer> demandOnPrice = (new Lp(budget, cpa, icvr, quota,
						   prices)).solveLp(previousImps);
	return demandOnPrice;
    }
}
